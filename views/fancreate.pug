extends layout 
 
block content 
  h1= title  
  div(class="card card-body  text-white text-center" style="width: 30rem; background-color:#a47575;" )
    form(id='fanForm', action="/resource/fan", method="POST") 
        div(class="form-group d-flex justify-content-evenly m-2")
            label(for='brand' class="col-sm-4") fan brand 
            input#brand(type='text', name='brand' class="form-control") 
        div(class="form-group d-flex justify-content-evenly m-2")
            label(for='material' class="col-sm-4") fan material 
            input#material(type='text', name='material' class="form-control") 
        div(class="form-group d-flex justify-content-evenly m-2")
            label(for='cost' class="col-sm-4") fan cost 
            input#cost(type='number', name='cost' class="form-control") 
        div(class='text-center')
            input(type="submit" class="btn btn-secondary" style="background-color:#a47575;" ) 
        div(class="d-flex flex-row justify-content-center")      
            a(href='/fan' class="btn btn-secondary" style="background-color:#a47575;") Go To fans
    
    script. 
        document.forms['fanForm'].addEventListener('submit', (event) => { 
        event.preventDefault(); 
        // TODO do something here to show user that form is being submitted 
        fetch(event.target.action, { 
            method: 'POST', 
            body: new URLSearchParams(new FormData(event.target)) // event.target is the form 
        }).then((resp) => { 
            return resp.json(); // or resp.text() or whatever the server sends 
        }).then((body) => { 
            alert("Save succeded") 
            // TODO handle body 
        }).catch((error) => { 
            // TODO handle error 
            alert("Save failed " + error ) 
        }); 
        }); 
